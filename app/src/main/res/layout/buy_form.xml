<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    ////////////////////////////////////////////



    /////////////////////////////////

    ////////////////////////////////


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="630dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView

                android:id="@+id/buy_form_back"
                android:layout_width="47dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/left_arrow" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

<!--                <ImageView-->

<!--                    android:id="@+id/buy_form_back"-->
<!--                    android:layout_width="47dp"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_marginLeft="5dp"-->
<!--                    android:layout_marginTop="8dp"-->
<!--                    android:src="@drawable/left_arrow" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">


                    android:id="@+id/scroll_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/buy_image_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>

            </FrameLayout>


            //////////////////////////////////

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line"></View>
            //////////////////////////////////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_me">

                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"

                        android:id="@+id/user_nickname"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:id="@+id/buy_location"
                        android:textSize="18dp"></TextView>


                </LinearLayout>


            </LinearLayout>
            /////////////////////////////////

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line"></View>
            /////////////////////////////////

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/buy_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/line"></View>

            </LinearLayout>
            ///////////////////////////////


            /////////////////////////////////

            ////////////////////////////////////////

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line"></View>
            ////////////////////////////////////////

            <TextView
                android:id="@+id/buy_content"
                android:layout_width="match_parent"
                android:layout_height="312dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/yellow_round_square"
                android:gravity="start"
                android:textSize="18dp">

            </TextView>
        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heart_black"
            android:layout_width="35dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/heart_black">

        </ImageView>

        <View
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="3px"
            android:layout_height="40dp"
            android:background="@color/line"></View>



            <TextView
                android:id="@+id/buy_price"
                android:layout_width="245dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

        <Button
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="채팅하기"
            android:textColor="@color/white"
            android:background="@drawable/yellow_round_square">

        </Button>



    </LinearLayout>





</LinearLayout>