<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorGray">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
       <View
           android:layout_width="1dp"
           android:layout_height="1dp">

       </View>

        <TextView

            android:id="@+id/product_count"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="top">

        </TextView>

        <ImageView

            android:id="@+id/product_image"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView

            android:id="@+id/product_name"

            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:textSize="20dp"
            android:textColor="#000000"

            android:text="물품 제목"
            />
            <TextView

                android:id="@+id/product_location"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:text="지역"
                />
            <TextView

                android:id="@+id/product_price"

                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="물품 가격"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    >

                <ImageView
                    android:id="@+id/heart_black_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="220dp"

                    android:src="@drawable/heart_black">


                </ImageView>

                    <TextView
                        android:id="@+id/heart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"

                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp">

                    </TextView>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        ></TextView>

    <TextView
        android:id="@+id/adapter_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        ></TextView>

    <TextView
        android:id="@+id/adapter_image_urls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        ></TextView>

    <ImageView
        android:id="@+id/heart_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        ></ImageView>




</LinearLayout>